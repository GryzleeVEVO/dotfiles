#!/usr/bin/env sh

# Set screen layout for internal display only
xrandr \
    --output eDP --mode 1920x1080 --pos 0x0 --rotate normal \
    --output DP-1-0 --off \
    --output DP-1-1 --off \
    --output DP-1-2 --off \
    --output DP-1-3 --off \
    --output HDMI-1-0 --off \
    --output DP-1-4 --off
