#!/bin/sh

# Set screen layout for external displays only
xrandr \
    --output eDP --off \
    --output DP-1-0 --off \
    --output DP-1-1 --off \
    --output DP-1-2 --primary --mode 2560x1440 --pos 1920x0 --rotate normal \
    --output DP-1-3 --off \
    --output HDMI-1-0 --mode 1920x1080 --pos 4480x360 --rotate normal \
    --output DP-1-4 --off
