[user]
	name = Dorian Wozniak
	email = dorian.wozniak@gmail.com

[init]
	defaultBranch = main

[core]
	autocrlf = input
	whitespace = -trailing-space

[pull]
	ff = only

[advice]
	addIgnoredFile = false

[rerere]
	enabled = 1
	autoupdate = 1

[url "git@github.com:"]
	insteadOf = gh:

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[alias]
	amend = commit --amend --message
	bch = checkout
	bdel = branch --delete
	bnew = checkout -b
	nuke = reset --hard HEAD
	unstage = reset HEAD --
	untrack = rm --cached

[include]
	# Add uncommited config
	path = "config.private"
