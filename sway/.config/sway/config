set $mod Mod4

set $term alacritty
set $browser firefox
set $private-browser firefox --private-window
set $menu wmenu-run
set $calc gnome-calculator
set $screenshot gnome-screenshot --interactive

set $font_mono "pango:JetBrains Mono 10"
set $wallpaper "$HOME/Im√°genes/wallpapers/sebastian-svenson-d2w-_1LJioQ-unsplash.jpg"

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Autostart .desktop files
exec dex --autostart --environment sway

# Start wallet
exec /usr/bin/kwalletd6
exec /usr/lib/pam_kwallet_init

# Start notification daemon
exec mako

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

input * {
    xkb_layout "es"
}

#
# Scratchpad:
#
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
#bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.

#bindsym $mod+minus scratchpad show


bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %X'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include "style"
include "keybinds"
